  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy &quot;$(TargetDir)$(TargetFileName)&quot; &quot;..\..\Client\Assets\Plugins\Network&quot;&#xD;&#xA;copy &quot;$(TargetDir)&quot; &quot;..\..\Server\Lib\Network&quot;" />
  </Target>

</Project>
